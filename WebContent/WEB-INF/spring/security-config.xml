<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p" 
	xmlns:security="http://www.springframework.org/schema/security"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
    	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
    	http://www.springframework.org/schema/security 
    	http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<security:global-method-security pre-post-annotations="enabled" />

	<security:http auto-config='true' use-expressions="true">
		<security:access-denied-handler error-page="/WEB-INF/views/common/accessdenied.jsp" />
		<security:intercept-url pattern="/resources/**" access="permitAll" />
		<security:intercept-url pattern="/" access="permitAll" />
		
<!-- 		<security:intercept-url pattern="/common/**" access="isAuthenticated()" /> -->
		<security:intercept-url pattern="/titles/**" access="hasAnyRole('librarian', 'masterlibrarian')"/>
 		
		<security:form-login login-page="/common/login" 
							 authentication-failure-url="/common/login" 
							 default-target-url="/common/welcome"
							 always-use-default-target="false"/>

	</security:http>

    <security:authentication-manager>
		<security:authentication-provider user-service-ref="myUserDetailsService"/>
		
	</security:authentication-manager>

	<bean id="myUserDetailsService" class="it.univaq.mwt.j2ee.kmZero.common.spring.security.UserDetailsServiceImpl"/>
	
</beans>